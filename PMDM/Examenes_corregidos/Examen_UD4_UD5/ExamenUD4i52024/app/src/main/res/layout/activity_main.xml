<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="Benvingut al Joc de Puntuacions"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnConfiguracio"
        android:text="Configuració"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnPuntuacions"
        android:text="Veure Puntuacions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp" />

    <!-- Botó per obrir AnimacioActivity -->
    <Button
        android:id="@+id/btnAnimacio"
        android:text="Reproduir Animació"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>


